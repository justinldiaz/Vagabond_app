<%= render partial: "users/nav", locals: {user: @user} %>
<div class="row margin50">
	<h1 class="col-md-4 col-md-offset-3">Edit this post</h1>

	<div>
	<%= form_for @post do |f|%>

		<div class="row">
			<div class="col-md-3 col-md-offset-3"><%= f.text_field :title, placeholder: "Post title", class: "form-control" %></div>
		</div><br>

		<div class="row">
			<div class="col-md-5 col-md-offset-3"><%= f.text_area :content, placeholder: "Post content", class: "form-control", rows: "10" %></div>
		</div><br>

		<div class="row">
			<div class="col-md-3 col-md-offset-3"><%= f.submit "Update", class: "btn btn-default" %></div>
		</div><br>

		<% end %>


<%= render partial: "/users/footer" %>

	</div>
</div>

