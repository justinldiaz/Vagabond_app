<%= render partial: "users/nav", locals: {user: @user} %>

<h1 class="col-md-4 col-md-offset-3">Make a new post</h1>

<% if flash['nopost'] %>
	<% flash['nopost'].each do |k,v| %>
		<div class="alert-danger"><%= p v[0] %></div>
	<% end %>
<% end %>

<div>
<%= form_for(@post) do |f|%>
	<div class="col-md-3 col-md-offset-3"><%= f.text_field :title, placeholder: "Post title", class: "form-control" %></div>
	<div class="row"></div><br>
	<div class="col-md-5 col-md-offset-3"><%= f.text_area :content, placeholder: "Post content", class: "form-control", rows: "10" %></div>
	<div class="row"></div><br>
	<div class="col-md-3 col-md-offset-3"><%= f.collection_select(:city_id, City.all, :id, :name) %></div>
	<div class="row"></div><br>
	<div class="col-md-3 col-md-offset-3"><%= f.submit "Submit", class: "btn btn-default" %></div>
	<% end %>

</div>