<%= render partial: "users/nav", locals: {user: @user} %>
<div class="col-md-5 col-md-offset-3">
	<% if flash['nopost'] %>
		<% flash['nopost'].each do |k,v| %>
			<div class="alert-danger text-center"><%= p v[0] %></div>
		<% end %>
	<% end %>
</div>	
<div>
<h1 class="col-md-5 col-md-offset-3">Make a new post</h1>
<div class="row"></div>
<br>
<%= form_for(@post) do |f|%>
	<div class="row"><br>
	<div class="col-md-3 col-md-offset-3"><%= f.text_field :title, placeholder: "Post title", class: "form-control" %></div>
	</div><br>
	<div class="row"><br>
	<div class="col-md-5 col-md-offset-3"><%= f.text_area :content, placeholder: "Post content", class: "form-control", rows: "10" %></div>
	</div><br>
	<div class="row">
	<div class="col-md-5 col-md-offset-3"><%= f.collection_select(:city_id, City.all, :id, :name) %></div>
	</div><br>
	<div class="row">
	<div class="col-md-5 col-md-offset-3"><%= f.submit "Submit", class: "btn btn-default" %></div>
	</div><br>
<% end %>

</div>