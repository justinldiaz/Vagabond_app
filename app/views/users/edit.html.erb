<%= render partial: "users/nav", locals: {user: @user} %>
<h1>Edit my profile</h1>
<br>
<%= form_for @user do |u| %>
	<%= u.text_field :first_name, placeholder: "First Name" %><br>
	<%= u.text_field :last_name, placeholder: "Last Name" %><br>
	<%= u.collection_select(:city_id, City.all, :id, :name) %><br>
	<%= u.submit "Update Profile" %><br>
<% end %>