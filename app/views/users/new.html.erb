
<h1 class="col-md-3 col-md-offset-4">Sign Up Here</h1>
<br>



<% if flash['nosignup'] %>
	<% flash['nosignup'].each do |k,v| %>
		<div class="alert-danger"><%= p v[0] %></div>
	<% end %>
<% end %>

<%= form_for @user do |u| %>
	<%= u.text_field :first_name, placeholder: "First Name" %><br>
	<%= u.text_field :last_name, placeholder: "Last Name" %><br>
	<%= u.text_field :email, placeholder: "Email" %><br>
	<%= u.password_field :password, placeholder: "Password" %><br>
	<%= u.password_field :password_confirmation, placeholder: "Confirm Password" %>
	<%= u.collection_select(:city_id, City.all, :id, :name) %>
	<br>
	<%= u.submit "Sign Up" %><br>
<% end %>


<h1 class="col-md-3 col-md-offset-4">Sign Up Here</h1>


<%= form_for @user do |u| %>
	<div class="row">
		<div class="col-md-3 col-md-offset-4"><%= u.text_field :first_name, placeholder: "First Name", class: "form-control" %></div><br>
	</div><br>
	
	<div class="row">
		<div class="col-md-3 col-md-offset-4"><%= u.text_field :last_name, placeholder: "Last Name", class: "form-control" %></div><br>
	</div><br>

	<div class="row">
		<div class="col-md-3 col-md-offset-4"><%= u.text_field :email, placeholder: "Email", class: "form-control" %></div><br>
	</div><br>

	<div class="row">
		<div class="col-md-3 col-md-offset-4"><%= u.password_field :password, placeholder: "Password", class: "form-control" %></div><br>
	</div><br>
	
	<div class="row">
