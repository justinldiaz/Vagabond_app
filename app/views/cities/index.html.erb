
<%= render partial: "/users/nav", locals: {user: @user} %>
<h1 class="text-center">Cities</h1>


<% @cities.each do |city| %>
<h4 class="col-xs-6 col-sm-4 text-center"><img class="col-lg-12 thumbnail" src="<%= city.picture %>" height="250" width="100" ><%= link_to "#{city.name}", city_path(city.id)  %>  (<%= city.posts.length %>) </h2>
<% end %>